{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./.dist",
    "paths": {
      "~components/*": ["components/*"],
      "~config/*": ["config/*"],
      "~containers/*": ["containers/*"],
      "~context/*": ["context/*"],
      "~data/*": ["data/*"],
      "~hooks/*": ["hooks/*"],
      "~lib/*": ["lib/*"],
      "~pages/*": ["pages/*"],
      "~scripts/*": ["scripts/*"],
      "~styles/*": ["styles/*"],
      "~svg/*": ["svg/*"],
      "~theme/*": ["theme/*"],
      "~utils/*": ["utils/*"]
    },
    "noUnusedParameters": false, // @todo(lint)
    "rootDir": ".",
    "strict": false,
    "incremental": true
  },
  "extends": "@jeromefitz/codestyle/tsconfig.react.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    // "config/notion/website/getRedirects.js",
    "index.d.ts",
    "lint-staged.config.js",
    "next-env.d.ts",
    "next.config.js",
    "next.sitemap.js"
  ],
  "exclude": ["node_modules", "zzz/", "**/*.test.ts"]
}
