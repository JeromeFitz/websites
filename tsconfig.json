{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // // w/ extends
    // "baseUrl": ".",
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // @todo(lint)
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // @todo(lint)
    // "noUnusedParameters": false, // @todo(lint)
    // "rootDir": "src",
    "outDir": "dist",
    "preserveSymlinks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false, // @todo(lint)
    "strictNullChecks": false, // @todo(lint)
    "strictPropertyInitialization": false, // @todo(lint)
    "target": "ESNext"
  },
  "exclude": ["node_modules", "tests/*.test.ts", "todo"],
  "extends": "@jeromefitz/tsconfig/next.json",
  "include": [
    "tsdown.config.ts",
    "node-modules-inspector.config.ts",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "sites/**/*.ts",
    "sites/**/*.tsx"
  ]
}
