{
  "extends": "@jeromefitz/codestyle/tsconfig.react.json",
  "compilerOptions": {
    // // w/ extends
    // "baseUrl": ".",
    "incremental": true,
    // "noUnusedParameters": false, // @todo(lint)
    // "outDir": "./.dist",
    // "rootDir": ".",
    // "strict": false,
    // //
    // // w/ next-unused
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2019"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // @todo(lint)
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // @todo(lint)
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false, // @todo(lint)
    "strictNullChecks": false, // @todo(lint)
    "strictPropertyInitialization": false, // @todo(lint)
    "target": "esnext",
    "paths": {
      "~components/*": ["components/*"],
      "~config/*": ["config/*"],
      "~containers/*": ["containers/*"],
      "~context/*": ["context/*"],
      "~data/*": ["data/*"],
      "~hooks/*": ["hooks/*"],
      "~lib/*": ["lib/*"],
      "~pages/*": ["pages/*"],
      "~scripts/*": ["scripts/*"],
      "~styles/*": ["styles/*"],
      "~svg/*": ["svg/*"],
      "~theme/*": ["theme/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    // "config/notion/website/getRedirects.js",
    "index.d.ts",
    "lint-staged.config.js",
    "next-env.d.ts",
    "next.config.js",
    "next.sitemap.js"
  ],
  "exclude": ["node_modules", "zzz/", "**/*.test.ts"]
}
