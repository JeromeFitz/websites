{
  "name": "@jeromefitz/websites",
  "private": true,
  "version": "0.0.0",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/jeromefitzgerald.com.git"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": []
  },
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "----": "# @turbo scripts",
    "build": "turbo run build",
    "dev": "turbo run dev --no-cache --parallel --continue",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "turbo run clean && ./scripts/clean.sh",
    "---- ": "# @lint",
    "pretty-quick": "pretty-quick",
    "lint:fix": "turbo run lint:fx ",
    "lint": "turbo run lint",
    "----  ": "# @ci",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----   ": "# @semantic-release",
    "semantic-release:old": "yarn workspaces run semantic-release -e semantic-release-monorepo",
    "semantic-release:dry": "yarn workspaces run semantic-release -e semantic-release-monorepo",
    "semantic-release": "turbo run semantic-release:mono --no-cache --parallel --continue",
    "----    ": "# @development",
    "branch": "git-cz -m branch --allow-empty",
    "j:dev": "turbo run dev --scope=*jeromefitzgerald* --include-dependencies",
    "j:start": "turbo run start --scope=*jeromefitzgerald* --include-dependencies"
  },
  "dependencies": {
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.16.5",
    "@jeromefitz/codestyle": "8.0.4",
    "@jeromefitz/conventional-gitmoji": "2.0.5",
    "@jeromefitz/git-cz": "14.0.6",
    "@jeromefitz/semantic": "8.0.6",
    "@types/is-ci": "3.0.0",
    "@types/lodash": "4.14.178",
    "@types/node": "17.0.10",
    "@types/react": "17.0.38",
    "@types/title": "3.4.1",
    "@types/uuid": "8.3.4",
    "dotenv": "14.2.0",
    "gitmojis": "3.8.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.4.7",
    "pinst": "2.1.6",
    "rimraf": "3.0.2",
    "semantic-release-monorepo": "7.0.5",
    "tsup": "5.11.11",
    "turbo": "1.0.28"
  },
  "turbo": {
    "baseBranch": "origin/main",
    "pipeline": {
      "build": {
        "outputs": [
          "dist/**",
          ".next/**"
        ],
        "dependsOn": [
          "^build"
        ]
      },
      "clean": {
        "cache": false
      },
      "dev": {
        "cache": false
      },
      "lint": {},
      "lint:fix": {
        "cache": false
      },
      "semantic-release:mono": {
        "cache": false,
        "dependsOn": [
          "build"
        ]
      },
      "start": {
        "cache": false
      },
      "test": {
        "outputs": [
          "coverage/**"
        ],
        "dependsOn": [
          "lint",
          "build"
        ]
      }
    }
  }
}
