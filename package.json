{
  "name": "@jeromefitz/websites",
  "description": "Monorepo for series of websites for Jerome Fitzgerald (he/him).",
  "private": true,
  "version": "0.0.0",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/websites.git"
  },
  "engines": {
    "node": ">=16"
  },
  "packageManager": "pnpm@7.4.0",
  "scripts": {
    "----": "# @turbo scripts",
    "build": "turbo run build --include-dependencies --no-deps",
    "dev": "turbo run dev --no-cache --parallel --continue --include-dependencies --no-deps",
    "start": "turbo run start --no-cache --parallel --continue --include-dependencies --no-deps",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "turbo run clean && ./scripts/clean.sh",
    "deduplicate": "npx pnpm-deduplicate",
    "deduplicate:check": "npx pnpm-deduplicate --list",
    "deploy": "turbo run build --scope=jeromefitzgerald.com --include-dependencies --no-deps",
    "---- ": "# @lint",
    "pretty-quick": "pretty-quick",
    "lint:fix": "turbo run lint:fx ",
    "lint": "turbo run lint",
    "----  ": "# @ci",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----   ": "# @semantic-release",
    "semantic-release": "pnpm semantic-release:mono",
    "semantic-release:mono": "pnpm --filter jeromefitzgerald.com -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo",
    "semantic-release:dry": "pnpm --filter jeromefitzgerald.com -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo --dry-run",
    "----    ": "# @development",
    "branch": "git-cz -m branch --allow-empty",
    "j:dev": "turbo run dev --scope=*jeromefitzgerald* --include-dependencies --no-deps",
    "j:start": "turbo run start --scope=*jeromefitzgerald* --include-dependencies --no-deps"
  },
  "dependencies": {
    "@babel/eslint-parser": "7.18.9",
    "@jeromefitz/conventional-gitmoji": "3.3.4",
    "@jeromefitz/eslint-config": "1.1.4",
    "@jeromefitz/git-cz": "14.4.1",
    "@jeromefitz/lint-staged": "1.1.2",
    "@jeromefitz/prettier-config": "1.1.1",
    "@jeromefitz/release-notes-generator": "1.2.4",
    "@jeromefitz/semantic": "9.2.3",
    "@jeromefitz/tsconfig": "1.1.1",
    "@types/is-ci": "3.0.0",
    "@types/jest": "28.1.8",
    "@types/lodash": "4.14.184",
    "@types/node": "16.11.7",
    "@types/react": "18.0.18",
    "@types/title": "3.4.1",
    "@types/uuid": "8.3.4",
    "dotenv": "16.0.2",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "lodash": "4.17.21",
    "pinst": "3.0.0",
    "pretty-quick": "3.1.3",
    "rimraf": "3.0.2",
    "semantic-release": "19.0.5",
    "semantic-release-monorepo": "7.0.5",
    "ts-jest": "28.0.8",
    "ts-node": "10.9.1",
    "tsup": "6.2.3",
    "turbo": "1.4.5",
    "typescript": "4.7.4"
  },
  "resolutions": {
    "eslint-plugin-import": "2.26.0"
  }
}
