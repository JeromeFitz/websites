{
  "name": "@jeromefitz/websites",
  "version": "0.0.0",
  "description": "Monorepo for series of websites for Jerome Fitzgerald (he/him).",
  "repository": "jeromefitz/websites.git",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "private": true,
  "packageManager": "^pnpm@7.26.1",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean:install": "turbo run clean && ./scripts/clean.sh",
    "deduplicate": "npx pnpm-deduplicate",
    "deduplicate:check": "npx pnpm-deduplicate --list",
    "format": "pnpm run format:prettier",
    "format:prettier": "pretty-quick",
    "lint:packages": "syncpack list-mismatches --config .syncpackrc",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pinst --disable",
    "semantic-release": "pnpm run semantic-release:mono",
    "semantic-release:dry": "pnpm --filter jeromefitzgerald.com -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo --dry-run",
    "semantic-release:mono": "pnpm --filter jeromefitzgerald.com -r --workspace-concurrency=1 exec -- npx --no-install semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {
    "@babel/eslint-parser": "7.21.3",
    "@jeromefitz/conventional-gitmoji": "3.3.5",
    "@jeromefitz/eslint-config": "1.1.13",
    "@jeromefitz/lint-staged": "1.1.8",
    "@jeromefitz/prettier-config": "1.1.5",
    "@jeromefitz/release-notes-generator": "1.2.8",
    "@jeromefitz/semantic": "9.2.6",
    "@jeromefitz/tsconfig": "1.1.3",
    "@types/is-ci": "3.0.0",
    "@types/jest": "29.5.0",
    "@types/lodash": "4.14.192",
    "@types/node": "18.15.10",
    "@types/react": "18.0.29",
    "@types/title": "3.4.1",
    "@types/uuid": "9.0.1",
    "ccommit": "1.1.2",
    "concurrently": "7.6.0",
    "dotenv": "16.0.3",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.5.0",
    "lint-staged": "13.2.0",
    "lodash": "4.17.21",
    "pinst": "3.0.0",
    "rimraf": "4.4.1",
    "semantic-release": "19.0.5",
    "semantic-release-monorepo": "7.0.5",
    "syncpack": "9.8.4",
    "ts-jest": "29.0.5",
    "ts-node": "10.9.1",
    "tsup": "6.7.0",
    "turbo": "1.8.5",
    "typescript": "4.9.5"
  },
  "resolutions": {
    "eslint-plugin-import": "2.27.5"
  },
  "pnpm": {
    "overrides": {}
  }
}
