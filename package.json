{
  "name": "@jeromefitz/websites",
  "private": true,
  "version": "0.0.0",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/websites.git"
  },
  "workspaces": {
    "packages": [
      "packages/*",
      "sites/*"
    ],
    "nohoist": []
  },
  "engines": {
    "node": ">=14"
  },
  "packageManager": "yarn@1.22.17",
  "scripts": {
    "----": "# @turbo scripts",
    "build": "turbo run build --include-dependencies --no-deps",
    "dev": "turbo run dev --no-cache --parallel --continue --include-dependencies --no-deps",
    "start": "turbo run start --no-cache --parallel --continue --include-dependencies --no-deps",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "clean:install": "turbo run clean && ./scripts/clean.sh",
    "---- ": "# @lint",
    "pretty-quick": "pretty-quick",
    "lint:fix": "turbo run lint:fx ",
    "lint": "turbo run lint",
    "----  ": "# @ci",
    "postinstall": "is-ci || husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "----   ": "# @semantic-release",
    "semantic-release": "yarn workspaces run semantic-release -e semantic-release-monorepo",
    "semantic-release:dry": "yarn workspaces run semantic-release -e semantic-release-monorepo --dry-run",
    "semantic-release:turbo": "turbo run semantic-release:mono --no-cache --parallel --continue",
    "----    ": "# @development",
    "branch": "git-cz -m branch --allow-empty",
    "j:dev": "turbo run dev --scope=*jeromefitzgerald* --include-dependencies --no-deps",
    "j:start": "turbo run start --scope=*jeromefitzgerald* --include-dependencies --no-deps"
  },
  "dependencies": {
    "@babel/eslint-parser": "7.17.0",
    "@jeromefitz/codestyle": "8.0.21",
    "@jeromefitz/conventional-gitmoji": "3.0.2",
    "@jeromefitz/git-cz": "14.2.3",
    "@jeromefitz/release-notes-generator": "1.0.2",
    "@jeromefitz/semantic": "9.0.3",
    "@types/is-ci": "3.0.0",
    "@types/jest": "27.4.1",
    "@types/lodash": "4.14.180",
    "@types/node": "16.11.7",
    "@types/react": "17.0.41",
    "@types/title": "3.4.1",
    "@types/uuid": "8.3.4",
    "dotenv": "16.0.0",
    "husky": "7.0.4",
    "is-ci": "3.0.1",
    "jest": "27.5.1",
    "lodash": "4.17.21",
    "pinst": "3.0.0",
    "rimraf": "3.0.2",
    "semantic-release-monorepo": "7.0.5",
    "ts-jest": "27.1.4",
    "ts-node": "10.7.0",
    "tsup": "5.12.1",
    "turbo": "1.1.10",
    "typescript": "4.5.5"
  }
}
