  "scripts": {
    "analyze": "ANALYZE=true pnpm build",
    "build": "CI=1 next build",
    "clean": "rm -rf ./.lighthouseci ./.next ./.turbo ./coverage ./e2e-report ./e2e-results ./storybook-static",
    "clean:install": "pnpm clean && rm -rf ./.cache ./node_modules",
    "copy": "echo mkdir -p ./dist && ./scripts/copy.sh",
    "dev": "next dev",
    "dev:turbo": "next dev --turbo",
    "format": "pnpm run format:lint",
    "format:lint": "pnpm lint:eslint --fix",
    "lhci": "pnpm --package=@lhci/cli@0.13.0 dlx lhci autorun --config=.lighthouserc.cjs",
    "lint": "concurrently \"pnpm run lint:eslint\" \"pnpm run lint:typescript:dev\"",
    "lint:eslint": "eslint ./src --ext cjs,js,jsx,mjs,ts,tsx --ignore-path ../../.eslintignore --max-warnings=0",
    "lint:typescript": "tsc --noEmit --declaration",
    "lint:typescript:dev": "pnpm run lint:typescript -p ./tsconfig.dev.json",
    "lint:typescript:prod": "pnpm run lint:typescript -p ./tsconfig.json",
    "semantic-release": "semantic-release",
    "start": "next start",
    "start:isr": "next start -H localhost",
    "storybook:build": "storybook build",
    "storybook:dev": "storybook dev --quiet --port 6002",
    "test:e2e": "playwright test --config ./playwright.config.ts",
    "test:unit": "jest --ci --coverage",
    "test:watch": "jest --watch"
  },
