  "engines": {
    "node": ">=22.12.0 <23",
    "pnpm": ">=10 <11"
  },
  "scripts": {
    "build": "CI=1 NODE_NO_WARNINGS=1 next build",
    "clean": "rm -rf ./.lighthouseci ./.next ./.turbo ./coverage ./e2e-report ./e2e-results ./storybook-static",
    "clean:install": "pnpm clean && rm -rf ./.cache ./node_modules",
    "copy": "echo mkdir -p ./dist && ./scripts/copy.sh",
    "db:generate": "drizzle-kit generate",
    "db:init": "pnpm db:generate && pnpm db:migrate",
    "db:migrate": "npx tsx ./src/lib/drizzle/init/migrate.ts",
    "db:seed": "npx tsx lib/drizzle/init/seed.ts",
    "db:setup": "npx tsx lib/drizzle/init/setup.ts",
    "db:studio": "drizzle-kit studio",
    "dev": "NODE_NO_WARNINGS=1 next dev --turbopack --experimental-https",
    "format": "pnpm run format:lint",
    "format:lint": "pnpm lint:eslint --fix",
    "lhci": "pnpm --package=@lhci/cli@0.14.0 dlx lhci autorun --config=.lighthouserc.cjs",
    "lint": "concurrently \"pnpm run lint:eslint\" \"pnpm run lint:typescript\"",
    "lint:eslint": "eslint ./src --max-warnings=0",
    "lint:typescript": "tsc --noEmit --declaration",
    "semantic-release": "semantic-release",
    "start": "NODE_NO_WARNINGS=1 next start",
    "test:e2e": "NODE_NO_WARNINGS=1 playwright test --config ./playwright.config.ts",
    "test:unit": "NODE_NO_WARNINGS=1 jest --ci --coverage",
    "test:watch": "NODE_NO_WARNINGS=1 jest --watch"
  },
