{
  "name": "jeromefitzgerald.com",
  "description": "Website for Jerome Fitzgerald (he/him).",
  "version": "0.0.0",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com/jeromefitz/websites.git",
    "directory": "sites/jeromefitzgerald.com"
  },
  "scripts": {
    "---": "@next",
    "analyze": "ANALYZE=true pnpm build",
    "build": "CI=1 next build && pnpm postbuild",
    "dev": "next dev",
    "dev:ds": "DESIGN_SYSTEM__LINK=true next dev",
    "dev:dst": "DESIGN_SYSTEM__LINK=true DESIGN_SYSTEM__TRANSPILE=true next dev",
    "postbuild": "next-sitemap --config next.sitemap.js",
    "start": "next start",
    "start:isr": "next start -H localhost",
    "unused": "pnpm next-unused",
    "--- ": "",
    "clean": "rm -rf .turbo && rm -rf ./.next",
    "clean:install": "pnpm clean && rm -rf ./.cache && rm -rf node_modules",
    "copy": "echo mkdir -p ./dist && ./scripts/copy.sh",
    "---  ": "@lint",
    "lint:eslint": "eslint ./src --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "lint:prettier": "prettier \"./src/**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\" --ignore-unknown --loglevel warn",
    "lint:typescript": "tsc --noEmit --declaration",
    "lint": "pnpm lint:prettier --check && pnpm lint:eslint && pnpm lint:typescript",
    "lint:fix": "pnpm lint:eslint --fix && pnpm lint:prettier --write",
    "---   ": "@release",
    "semantic-release": "semantic-release",
    "---    ": "",
    "---     ": "",
    "test": "echo # jest",
    "---      ": ""
  },
  "dependencies": {
    "@heroicons/react": "1.0.6",
    "@jeromefitz/design-system": "3.5.7",
    "@jeromefitz/notion": "3.3.3",
    "@jeromefitz/spotify": "2.3.1",
    "@jeromefitz/utils": "2.2.1",
    "@mantine/hooks": "5.0.0",
    "@octokit/core": "4.0.4",
    "@plaiceholder/next": "2.4.0",
    "@radix-ui/colors": "0.1.8",
    "@radix-ui/react-icons": "1.1.1",
    "@stitches/react": "1.2.8",
    "@types/react": "18.0.15",
    "@vercel/fetch": "6.2.0",
    "date-fns": "2.29.1",
    "date-fns-tz": "1.3.6",
    "emoji-api": "2.0.1",
    "fast-json-stable-stringify": "2.1.0",
    "fathom-client": "3.5.0",
    "framer-motion": "6.5.1",
    "github-slugger": "1.4.0",
    "immer": "9.0.15",
    "ioredis": "5.2.2",
    "kbar": "0.1.0-beta.36",
    "ms": "3.0.0-canary.1",
    "next": "12.2.3",
    "next-compose-plugins": "2.2.1",
    "next-seo": "5.5.0",
    "next-sitemap": "3.1.15",
    "next-themes": "0.2.0",
    "next-transpile-modules": "9.0.0",
    "node-emoji": "1.11.0",
    "nprogress": "0.2.0",
    "plaiceholder": "2.4.0",
    "pluralize": "8.0.0",
    "podcast": "2.0.0",
    "ramda": "0.28.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-swipeable": "7.0.0",
    "react-use": "17.4.0",
    "sharp": "0.30.7",
    "swr": "1.3.0",
    "title": "3.4.4",
    "ts-node": "10.9.1",
    "use-sound": "4.0.1",
    "uuid": "8.3.2",
    "zustand": "4.0.0"
  },
  "devDependencies": {
    "@jeromefitz/eslint-config": "1.1.4",
    "@jeromefitz/lint-staged": "1.1.2",
    "@jeromefitz/prettier-config": "1.1.1",
    "@jeromefitz/shared": "workspace:*",
    "@jeromefitz/tsconfig": "1.1.1",
    "@next/bundle-analyzer": "12.2.3",
    "@types/github-slugger": "1.3.0",
    "@types/ms": "0.7.31",
    "@types/nprogress": "0.2.0",
    "@types/pluralize": "0.0.29",
    "@types/ramda": "0.28.15",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@types/title": "3.4.1",
    "@types/uuid": "8.3.4",
    "encoding": "0.1.13",
    "eslint-config-next": "12.2.3",
    "next-notion": "workspace:*",
    "next-unused": "0.0.6"
  },
  "next-unused": {
    "alias": {
      "~components": "src/components/",
      "~config": "src/config/",
      "~context": "src/context/",
      "~custom": "src/custom/",
      "~data": "src/data/",
      "~hooks": "src/hooks/",
      "~lib": "src/lib/",
      "~store": "src/store/",
      "~styles": "src/styles/",
      "~utils": "src/utils/"
    },
    "debug": false,
    "entrypoints": [
      "src/pages"
    ],
    "exclude": [
      "src/data/*"
    ],
    "include": [
      "src/components",
      "src/config",
      "src/context",
      "src/custom",
      "src/data",
      "src/hooks",
      "src/pages",
      "src/routes",
      "src/store",
      "src/styles",
      "src/utils"
    ]
  }
}
