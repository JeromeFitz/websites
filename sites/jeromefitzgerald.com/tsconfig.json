{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // @hack(typescript) next does not put autogenerated in this folder
    // "rootDir": "src",
    "rootDir": ".",
    // "outDir": "dist",
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "~app/*": ["src/app/*"],
      "~components/*": ["src/components/*"],
      "~config/*": ["src/config/*"],
      "~containers/*": ["src/containers/*"],
      "~context/*": ["src/context/*"],
      "~custom/*": ["src/custom/*"],
      "~data/*": ["src/data/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~pages/*": ["src/pages/*"],
      "~playground/*": ["src/playground/*"],
      "~routes/*": ["src/routes/*"],
      "~scripts/*": ["src/scripts/*"],
      "~store/*": ["src/store/*"],
      "~styles/*": ["src/styles/*"],
      "~svg/*": ["src/svg/*"],
      "~theme/*": ["src/theme/*"],
      "~ui/*": ["src/ui/*"],
      "~utils/*": ["src/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true
  },
  "include": [
    "./.next/types/**/*.ts",
    ".next/types/**/*.ts",
    "index.d.ts",
    "next-env.d.ts",
    "src"
  ],
  "exclude": ["node_modules", "tests/*.test.ts"]
}
