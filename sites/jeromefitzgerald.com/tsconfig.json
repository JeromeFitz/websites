{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // "@jeromefitz/next-config/env.client.mjs": [
      //   "./src/config/next.config.env.client.mjs"
      // ],
      // "@jeromefitz/next-config/env.server.mjs": [
      //   "./src/config/next.config.env.server.mjs"
      // ],
      "@jeromefitz/next-config/*": ["../../packages/next-config/src/*"],
      "radix-themes-tw": ["./src/config/radix-themes-tw.css"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", ".next/types/**/*.ts"],
  "exclude": ["node_modules", "zzz/**"]
}
