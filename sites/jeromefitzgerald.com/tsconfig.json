{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    // "outDir": "dist",
    "baseUrl": ".",
    "preserveSymlinks": true,
    "paths": {
      "~components/*": ["src/components/*"],
      "~config/*": ["src/config/*"],
      "~containers/*": ["src/containers/*"],
      "~context/*": ["src/context/*"],
      "~custom/*": ["src/custom/*"],
      "~data/*": ["src/data/*"],
      "~hooks/*": ["src/hooks/*"],
      "~lib/*": ["src/lib/*"],
      "~pages/*": ["src/pages/*"],
      "~scripts/*": ["src/scripts/*"],
      "~styles/*": ["src/styles/*"],
      "~svg/*": ["src/svg/*"],
      "~theme/*": ["src/theme/*"],
      "~utils/*": ["src/utils/*"]
    }
  },
  "include": ["src", "index.d.ts", "next-env.d.ts"],
  "exclude": ["node_modules", "tests/*.test.ts"]
}
