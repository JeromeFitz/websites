{
  "$schema": "https://turborepo.org/schema.json",
  "globalDependencies": ["pnpm-workspace.yaml"],
  "pipeline": {
    "build": {
      "outputs": [".cache/**", ".next/**"],
      "dependsOn": ["^build"],
      "inputs": ["src/**", "*.cjs", "*.js", "package.json", "vercel.json"],
      "env": ["VERCEL_ENV"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**", "*.cjs", "*.js", "package.json", "vercel.json"]
    },
    "format:lint": {
      "cache": false
    },
    "semantic-release:mono": {
      "cache": false,
      "dependsOn": ["lint"]
    },
    "start": {
      "cache": false
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": ["lint"],
      "inputs": ["src/**", "*.cjs", "*.js", "package.json", "vercel.json"]
    }
  }
}
