{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // // w/ extends
    // "baseUrl": ".",
    "incremental": true,
    // "noUnusedParameters": false, // @todo(lint)
    // "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // "jsx": "preserve",
    "jsx": "react-jsx",
    "lib": ["dom", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // @todo(lint)
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // @todo(lint)
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false, // @todo(lint)
    "strictNullChecks": false, // @todo(lint)
    "strictPropertyInitialization": false, // @todo(lint)
    "target": "ESNext",
    "tsBuildInfoFile": ".tsbuildinfo",
    "types": ["node", "react/canary"],
    "paths": {
      "@jeromefitz/ds/*": ["../../packages/design-system/src/*"],
      "@jeromefitz/next-config/*": ["../../packages/next-config/src/*"],
      "next-notion/*": ["../../packages/next-notion/src/*"]
    }
  },
  "include": ["src", "index.d.ts", "next-env.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
