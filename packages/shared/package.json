{
  "name": "@jeromefitz/shared",
  "version": "0.0.0",
  "type": "module",
  "repository": "jeromefitz/websites.git",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup-node",
    "clean": "rm -rf ./.turbo ./dist",
    "clean:install": "pnpm clean && rm -rf ./node_modules",
    "copy": "mkdir -p ./dist && ./scripts/copy.sh",
    "dev": "tsup-node --watch",
    "format:lint": "pnpm lint:eslint --fix",
    "lint": "pnpm lint:eslint && pnpm lint:typescript",
    "lint:eslint": "eslint ./src --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "lint:typescript": "tsc --noEmit --declaration",
    "semantic-release": "echo semantic-release"
  },
  "dependencies": {
    "@jeromefitz/design-system": "4.2.1",
    "@tanem/react-nprogress": "5.0.38",
    "fathom-client": "3.5.0",
    "lodash": "4.17.21",
    "next": "13.4.2",
    "next-themes": "0.2.1",
    "plaiceholder": "2.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "2.1.5"
  },
  "devDependencies": {
    "@types/lodash": "4.14.194",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "next-notion": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false
}
