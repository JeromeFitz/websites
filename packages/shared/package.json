{
  "license": "MIT",
  "version": "0.0.0",
  "name": "@jeromefitz/shared",
  "author": {
    "name": "Jerome Fitzgerald",
    "email": "j@jeromefitzgerald.com",
    "url": "https://jeromefitzgerald.com"
  },
  "repository": "jeromefitz/websites.git",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup-node",
    "clean": "rm -rf .turbo && rm -rf dist",
    "clean:install": "pnpm clean && rm -rf node_modules",
    "copy": "mkdir -p ./dist && ./scripts/copy.sh",
    "dev": "tsup-node --watch",
    "format:lint": "pnpm lint:eslint --fix && pnpm format:prettier --write",
    "format:prettier": "prettier \"./src/**/*.{cjs,js,jsx,mjs,ts,tsx,json,md,mdx,css,html,yml,yaml,scss}\" --ignore-unknown --loglevel warn",
    "lint": "pnpm format:prettier --check && pnpm lint:eslint && pnpm lint:typescript",
    "lint:eslint": "eslint ./src --ext cjs,js,jsx,mjs,ts,tsx --max-warnings=0",
    "lint:typescript": "tsc --noEmit --declaration",
    "semantic-release": "echo semantic-release",
    "test": "echo # jest"
  },
  "dependencies": {
    "@jeromefitz/design-system": "4.1.3",
    "@stitches/react": "1.2.8",
    "fathom-client": "3.5.0",
    "lodash": "4.17.21",
    "next": "12.3.1",
    "next-themes": "0.2.1",
    "nprogress": "0.2.0",
    "plaiceholder": "2.5.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "swr": "1.3.0"
  },
  "devDependencies": {
    "@types/lodash": "4.14.185",
    "@types/react": "18.0.21",
    "@types/react-dom": "18.0.6",
    "next-notion": "workspace:*"
  }
}
