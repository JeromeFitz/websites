{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // // w/ extends
    // "baseUrl": ".",
    "incremental": true,
    // "noUnusedParameters": false, // @todo(lint)
    // @todo(typescript) until figure out config stuff this has to go here
    // "rootDir": "./src",
    "outDir": "./dist",
    // "strict": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    // "jsx": "preserve",
    "jsx": "react-jsx",
    "lib": ["dom", "ES2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // @todo(lint)
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false, // @todo(lint)
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": false, // @todo(lint)
    "strictNullChecks": false, // @todo(lint)
    "strictPropertyInitialization": false, // @todo(lint)
    "target": "ESNext",
    "tsBuildInfoFile": ".tsbuildinfo",
    "paths": {
      "@jeromefitz/ds/*": ["../../packages/design-system/src/*"],
    },
  },
  "include": ["src", "index.d.ts", "next-env.d.ts"],
  "exclude": ["node_modules", "**/*.test.ts"],
}
